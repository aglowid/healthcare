<center> 
  <h1 class="mrg-top-30">Sign up</h1>
  <div class="mrg-top-10"> 
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control col-md-4" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control col-md-4" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-md-4" %>
      </div>

      <div class="form-group">
        <%= f.label :role_id, "Select User Type" %><br />
        <%= f.select :role_id, @roles, {},class: "form-control col-md-4" %>
      </div>

      <div class="actions mrg-top-10">
        <%= f.submit "Sign up", class: "btn btn-primary btn-prmy-cust" %>
      </div>
    <% end %>
  </div>  
  <div class="mrg-top-10">
    <%= render "users/shared/links" %>
  </div>  
</center>